<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Black background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
        </shape>
    </item>

    <!-- Border around the background -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#000000" />
        </shape>
    </item>
</layer-list>
